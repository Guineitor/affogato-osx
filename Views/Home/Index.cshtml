@{
    ViewData["Title"] = "Home Page";
}

<header class="intro-header" style="background-image: url('images/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Affogato</h1>
                    <hr class="small">
                    <span class="subheading">Um simples blog para simples id√©ias</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <h2>Recent Posts</h2>
        
        @*foreach (var post in Model.RecentPosts)
        {*@
            <div class="post-preview">
                <a href="@*Url.Action("Post", "Home", new { id = post.Id })*@">
                    <h2 class="post-title">
                        @*post.Title*@ Teste
                    </h2>
                    <h3 class="post-subtitle">
                        @*post.Content.Substring(0, Math.Min(post.Content.Length - 1, 100))*@ Teste Saporra
                    </h3>
                </a>
                <p class="post-meta">Posted by <a href="#">@*post.Author*@EU</a> on 12@*post.CreatedAtUtc*@</p>
            </div>
        @*}*@
       
<hr>
    <ul class="pager">
        <li class="next">
            <a href="#">Older Posts &rarr;</a>
        </li>
    </ul>
